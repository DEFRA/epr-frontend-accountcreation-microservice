@using FrontendAccountCreation.Core.Sessions.ReEx
@using FrontendAccountCreation.Web.Extensions
@using FrontendAccountCreation.Web.ViewModels.ReExAccount
@using FrontendAccountCreation.Web.ViewModels.ReExAccount.Unincorporated
@using FrontendAccountCreation.Web.ViewModels.Shared.GovUK

@model ReExManageAccountPersonViewModel

@{
    ViewData["Title"] = Localizer["ReExManageAccountPerson.Title"];
    var errorsViewModel = new ErrorsViewModel(ViewData.ModelState.ToErrorDictionary(), Localizer);
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                @await Html.PartialAsync("Partials/Govuk/_ErrorSummary", errorsViewModel)

                <h1 class="govuk-heading-l">@Localizer["ReExManageAccountPerson.PageTitle"]</h1>

                <p class="govuk-body">
                    @Localizer["ReExManageAccountPerson.Intro1"]
                </p>

                <p class="govuk-body">
                    @Localizer["ReExManageAccountPerson.Intro2"]
                </p>

                <ul class="govuk-list govuk-list--bullet">
                    <li>@Localizer["ReExManageAccountPerson.Bullet.Apply"]</li>
                    <li>@Localizer["ReExManageAccountPerson.Bullet.Verify"]</li>
                </ul>

                <div class="govuk-inset-text">
                    @Localizer["ReExManageAccountPerson.DelegateNote"]
                </div>

                <p class="govuk-body">
                    @Localizer["ReExManageAccountPerson.MultipleNote"]
                </p>

                <h2 class="govuk-heading-m">@Localizer["ReExManageAccountPerson.RolesHeading"]</h2>

                <p class="govuk-body">
                    @Localizer["ReExManageAccountPerson.RolesDefinition"]
                </p>

                <p class="govuk-body">@Localizer["ReExManageAccountPerson.RolesExampleIntro"]</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>@Localizer["ReExManageAccountPerson.Role.Chairperson"]</li>
                    <li>@Localizer["ReExManageAccountPerson.Role.Treasurer"]</li>
                    <li>@Localizer["ReExManageAccountPerson.Role.Secretary"]</li>
                    <li>@Localizer["ReExManageAccountPerson.Role.Manager"]</li>
                    <li>@Localizer["ReExManageAccountPerson.Role.Owner"]</li>
                </ul>

                @* <form method="post"> *@
                <form asp-controller="Unincorporated" asp-action="ManageAccountPerson" method="post">
                    <h2 class="govuk-heading-m">@Localizer["ReExManageAccountPerson.InviteHeading"]</h2>
                    <p class="govuk-body">@Localizer["ReExManageAccountPerson.InviteInstruction"]</p>

                    @await Html.PartialAsync("Partials/Govuk/_ErrorList", errorsViewModel)

                    <div class="govuk-radios" data-module="govuk-radios">

                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="Option1"
                                   type="radio"
                                   gov-for="ManageAccountPersonAnswer"
                                   gov-value="@nameof(ManageAccountPersonAnswer.IAgreeToBeAnApprovedPerson)">
                            <label class="govuk-label govuk-radios__label"
                                   gov-for="ManageAccountPersonAnswer"
                                   gov-value="@nameof(ManageAccountPersonAnswer.IAgreeToBeAnApprovedPerson)">
                                @Localizer["ReExManageAccountPerson.Option.Self"]
                            </label>
                        </div>

                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="Option2"
                                   type="radio"
                                   gov-for="ManageAccountPersonAnswer"
                                   gov-value="@nameof(ManageAccountPersonAnswer.IWillInviteATeamMemberToBeApprovedPersonInstead)">
                            <label class="govuk-label govuk-radios__label"
                                   gov-for="ManageAccountPersonAnswer"
                                   gov-value="@nameof(ManageAccountPersonAnswer.IWillInviteATeamMemberToBeApprovedPersonInstead)">
                                @Localizer["ReExManageAccountPerson.Option.TeamMember"]
                            </label>
                        </div>

                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="Option3"
                                   type="radio"
                                   gov-for="ManageAccountPersonAnswer"
                                   gov-value="@nameof(ManageAccountPersonAnswer.IWillInviteAnApprovedPersonLater)">
                            <label class="govuk-label govuk-radios__label"
                                   gov-for="ManageAccountPersonAnswer"
                                   gov-value="@nameof(ManageAccountPersonAnswer.IWillInviteAnApprovedPersonLater)">
                                @Localizer["ReExManageAccountPerson.Option.Later"]
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button">
                        @Localizer["ReExManageAccountPerson.Confirm"]
                    </button>
                </form>

            </div>
        </div>
    </main>
</div>

