@using FrontendAccountCreation.Web.ViewModels.AccountCreation
@using FrontendAccountCreation.Web.ViewModels.Shared.GovUK
@using FrontendAccountCreation.Web.Extensions
@using FrontendAccountCreation.Core.Sessions

@model PartnershipTypeRequestViewModel
@{
    ViewData["Title"] = Localizer["PartnershipType.Title"];
    var errorsViewModel = new ErrorsViewModel(ViewData.ModelState.ToErrorDictionary(), Localizer);
}

<div class="govuk-width-container ">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row ">
            <div class="govuk-grid-column-two-thirds">
                @await Html.PartialAsync("Partials/Govuk/_ErrorSummary", errorsViewModel)
                <form asp-controller="LimitedPartnership" asp-action="PartnershipType" method="post">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                                <h1 class="govuk-fieldset__heading">
                                    @Localizer["PartnershipType.Title"]
                                </h1>
                            </legend>

                            @await Html.PartialAsync("Partials/Govuk/_ErrorList", errorsViewModel)

                            <div class="govuk-radios" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="rdoYesisLimitedPartnership"
                                           type="radio"
                                           gov-for="isLimitedPartnership"
                                           gov-value="@nameof(PartnershipType.LimitedPartnership)"
                                           gov-first-option="true">
                                    <label class="govuk-label govuk-radios__label"
                                           gov-for="isLimitedPartnership"
                                           gov-value="@nameof(PartnershipType.LimitedPartnership)"
                                           gov-first-option="true">
                                        @Localizer["PartnershipType.LimitedPartnership"]
                                    </label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" type="radio" id="rdoNoisLimitedPartnership"
                                           gov-for="isLimitedPartnership"
                                           gov-value="@nameof(PartnershipType.LimitedLiabilityPartnership)">
                                    <label class="govuk-label govuk-radios__label"
                                           gov-for="isLimitedPartnership"
                                           gov-value="@nameof(PartnershipType.LimitedLiabilityPartnership)">
                                        @Localizer["PartnershipType.LimitedLiabilityPartnership"]
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <button class="govuk-button" data-module="govuk-button">
                        @SharedLocalizer["Continue"]
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>