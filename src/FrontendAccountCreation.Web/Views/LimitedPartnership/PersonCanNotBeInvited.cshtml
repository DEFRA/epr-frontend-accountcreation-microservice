@using Microsoft.AspNetCore.Mvc.TagHelpers

@model FrontendAccountCreation.Web.ViewModels.ReExAccount.LimitedPartnershipPersonCanNotBeInvitedViewModel

@{
    ViewData["Title"] = Localizer["PersonCanNotBeInvited.Title"];
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-l">
                    @Localizer["PersonCanNotBeInvited.Heading"]
                </h1>

                <p class="govuk-body">
                    @Localizer["PersonCanNotBeInvited.Explanation"]
                </p>

                <p class="govuk-body">
                    @Localizer["PersonCanNotBeInvited.YouDoNotHaveToInvite"]
                </p>

                <ul class="govuk-list govuk-list--bullet">
                    <li>@Localizer["PersonCanNotBeInvited.ApplyForAccreditation"]</li>
                    <li>@Localizer["PersonCanNotBeInvited.SubmitAndVerify"]</li>
                </ul>

                <div class="govuk-button-group">
                    <button class="govuk-button" type="submit">
                        @SharedLocalizer["Continue"]
                    </button>
                    
                    <a class="govuk-link"
                       asp-action="ApprovedPersonPartnershipRole"
                       asp-controller="LimitedPartnership"
                       asp-route-id="@Model.Id">
                        @Localizer["PersonCanNotBeInvited.InviteEligiblePerson"]
                    </a>
                </div>

            </div>
        </div>
    </main>
</div>