@using FrontendAccountCreation.Core.Sessions;
@using FrontendAccountCreation.Core.Sessions.ReEx
@using FrontendAccountCreation.Web.Extensions
@using FrontendAccountCreation.Web.ViewModels.ReExAccount
@using FrontendAccountCreation.Web.ViewModels.Shared.GovUK;

@model List<ReExCompanyTeamMember>;

@{
    ViewData["Title"] = Localizer["TeamMembersCheckInvitationDetails.Title"];
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-l govuk-!-margin-bottom-6">
                    @Localizer["TeamMembersCheckInvitationDetails.Title"]
                </h1>

                <div class="govuk-summary-card">

                    <div class="govuk-summary-card__title-wrapper">
                        <p class="govuk-body">@Localizer["TeamMembersCheckInvitationDetails.Help"]</p>
                    </div>

                    @for (int i = 0; i < Model?.Count; i++)
                    {
                        <div class="govuk-summary-card__content">
                            <dl class="govuk-summary-list">

                                <!-- Role of team member -->
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        @Localizer["TeamMembersCheckInvitationDetails.Role"]
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @SharedLocalizer[Model[i].Role.ToString()]
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        <a class="govuk-link" href="@Url.Action("TeamMemberRoleInOrganisation", "Organisation", new { index = i })">@Localizer["TeamMembersCheckInvitationDetails.Change"]<span class="govuk-visually-hidden"> role</span></a>
                                    </dd>
                                </div>

                                <!-- Name, Email, Telephone -->
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        @Localizer["TeamMembersCheckInvitationDetails.Name"]<br />
                                        @Localizer["TeamMembersCheckInvitationDetails.Email"]<br />
                                        @Localizer["TeamMembersCheckInvitationDetails.Telephone"]
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        Frank Bridger @i.ToString()<br/>
                                        frankie.bridger@acornltd.com<br/>
                                        07890030028
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        <a class="govuk-link" href="httpps:www.google.com">Change<span class="govuk-visually-hidden"> name</span></a>
                                    </dd>
                                </div>

                            </dl>
                        </div>

                        <div class="govuk-button-group">
                            @Html.ActionLink(@Localizer["TeamMembersCheckInvitationDetails.Remove"].Value, "TeamMembersCheckInvitationDetails", "Organisation",
                                     new
                                     {
                                         @index = i
                                     },
                                     new
                                     {
                                         @class = "govuk-button govuk-button--secondary"
                                     })
                        </div>
                    }

                    <form action="check-your-answers" method="post" novalidate>
                        <button class="govuk-button" data-module="govuk-button">
                            @Localizer["TeamMembersCheckInvitationDetails.Continue"]
                        </button>
                    </form>

                    <p class="govuk-body">
                        <a class="govuk-link" href="@Url.Action("TeamMemberRoleInOrganisation", "Organisation", new { index = Model?.Count ?? 0 })">@Localizer["TeamMembersCheckInvitationDetails.InviteAnotherPerson"]</a>
                    </p>

                </div>
            </div>
        </div>
    </main>
</div>