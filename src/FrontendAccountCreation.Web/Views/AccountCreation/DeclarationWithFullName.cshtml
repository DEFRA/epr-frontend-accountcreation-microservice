@using FrontendAccountCreation.Web.Extensions
@using FrontendAccountCreation.Web.ViewModels.AccountCreation
@using FrontendAccountCreation.Web.ViewModels.Shared.GovUK

@model DeclarationViewModelWithFullName

@{
    ViewData["Title"] = Localizer["DeclarationWithFullName.Title"];
    var errorsViewModel = new ErrorsViewModel(ViewData.ModelState.ToErrorDictionary(), Localizer);
}
@{
    var organisationName = ViewBag.OrganisationName ?? string.Empty;
}
<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l govuk-!-margin-bottom-4">
                    @Localizer["DeclarationWithFullName.Title"]
                </h1>

                <details class="govuk-details">
                    <summary class="govuk-details__summary">
                        <span class="govuk-details__summary-text">
                            @Localizer["DeclarationWithFullName.WhoCanBeAP"]
                        </span>
                    </summary>

                    <div class="govuk-details__text">
                        <p>@Localizer["DeclarationWithFullName.APMustBe"]</p>
                        <ul class="govuk-list govuk-list--bullet govuk-!-margin-left-2">
                            <li>
                                @Localizer["DeclarationWithFullName.WhoCanBeAPOption1"]
                            </li>
                            <li>
                                @Localizer["DeclarationWithFullName.WhoCanBeAPOption2"]
                            </li>
                            <li>
                                @Localizer["DeclarationWithFullName.WhoCanBeAPOption3"]
                            </li>
                            <li>
                                @Localizer["DeclarationWithFullName.WhoCanBeAPOption4"]
                            </li>
                        </ul>
                        <p>@Localizer["DeclarationWithFullName.WhoCanBeAPOption5", organisationName]</p>
                    </div>
                </details>

                <p class="govuk-body">@Localizer["DeclarationWithFullName.YouAreAgreeingThat"]</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>@Localizer["DeclarationWithFullName.Point1"] </li>
                    <li>@Localizer["DeclarationWithFullName.Point2"]</li>
                    
                </ul>

                <h1 class="govuk-heading-s govuk-!-margin-bottom-2">
                    @Localizer["DeclarationWithFullName.FullNameTextBox.Label"]
                </h1>

                <form asp-controller="AccountCreation" asp-action="ConfirmWithFullName" method="post">

                    @await Html.PartialAsync("Partials/Govuk/_ErrorList", errorsViewModel)

                    <div class="govuk-form-group">                       

                        <input class="govuk-input govuk-!-width-full @Html.Raw(ViewData.ModelState.Count > 0 ? "govuk-input--error" : "")"
                               type="text"
                               gov-for="FullName"
                               gov-value="@Model.FullName"
                               aria-describedby="FullName-hint">
                    </div>

                    <button class="govuk-button" data-module="govuk-button">
                        @Localizer["DeclarationWithFullName.ButtonText"]
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>
