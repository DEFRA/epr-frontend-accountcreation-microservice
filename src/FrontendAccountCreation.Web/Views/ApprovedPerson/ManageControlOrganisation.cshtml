@using FrontendAccountCreation.Core.Models
@using FrontendAccountCreation.Web.ViewModels.AccountCreation
@using FrontendAccountCreation.Web.ViewModels.Shared.GovUK
@using FrontendAccountCreation.Web.Extensions
@using FrontendAccountCreation.Core.Sessions
@using FrontendAccountCreation.Web.Constants

@model UkNationViewModel

@{
	ViewData["Title"] = Localizer["UkNation.Title"];
	ViewData["ApplicationTitleOverride"] = LayoutOverrides.ReExTitleOverride;
	ViewData["HeaderOverride"] = LayoutOverrides.ReExOrganisationHeaderOverride;

	var errorsViewModel = new ErrorsViewModel(ViewData.ModelState.ToErrorDictionary(), Localizer);
}

<div class="govuk-width-container">
	<main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">
				@await Html.PartialAsync("Partials/Govuk/_ErrorSummary", errorsViewModel)

				<form asp-controller="ApprovedPerson" asp-action="ManageControlOrganisation" method="post">
					<div class="govuk-form-group@(!ViewData.ModelState.IsValid ? " govuk-form-group--error" : "")">
						<fieldset class="govuk-fieldset">
							<h1 class="fieldset__heading govuk-heading-l govuk-!-margin-top-0 govuk-!-margin-bottom-0">
								@Localizer["ManageControlOrganisation.Question"]
							</h1>
						</fieldset>

							<div class="govuk-hint" id="sole-trader-hint">
								@Localizer["ManageControlOrganisation.Hint"]
							</div>

							@await Html.PartialAsync("Partials/Govuk/_ErrorList", errorsViewModel)

							<div class="govuk-radios" data-module="govuk-radios">
								<div class="govuk-radios__item">
									<input class="govuk-radios__input" type="radio" id="rdoMCOYes"
										   gov-for="UkNation"
										   gov-value="@nameof(YesNoNotSure.Yes)"
										   gov-first-option="true">
									<label class="govuk-label govuk-radios__label"
										   gov-for="UkNation"
										   gov-value="@nameof(YesNoNotSure.Yes)"
										   gov-first-option="true">
										@SharedLocalizer["Yes"]
									</label>
								</div>

								<div class="govuk-radios__item">
									<input class="govuk-radios__input" type="radio" id="rdoMCONo"
										   gov-for="UkNation"
										   gov-value="@nameof(YesNoNotSure.No)">
									<label class="govuk-label govuk-radios__label"
										   gov-for="UkNation"
										   gov-value="@nameof(YesNoNotSure.No)">
										@SharedLocalizer["No"]
									</label>
								</div>

								<div class="govuk-radios__item">
									<input class="govuk-radios__input" type="radio" id="rdoMCONotsure"
										   gov-for="UkNation"
										   gov-value="@nameof(YesNoNotSure.NotSure)">
									<label class="govuk-label govuk-radios__label"
										   gov-for="UkNation"
										   gov-value="@nameof(YesNoNotSure.NotSure)">
										@SharedLocalizer["NotSure"]
									</label>
								</div>
							</div>
				
					</div>

					<button class="govuk-button" data-module="govuk-button">
						@SharedLocalizer["Continue"]
					</button>
				</form>
			</div>
		</div>
	</main>
</div>